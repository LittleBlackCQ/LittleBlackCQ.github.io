<div class="grid-sizer"></div>
<div class="grid-item">
  <a href="{% if literature.redirect %}{{ literature.redirect }}{% else %}{{ literature.url | relative_url }}{% endif %}">
    <div class="card hoverable">
      {% if literature.img %}
        {%
          include figure.liquid
          loading="eager"
          path=literature.img
          sizes = "250px"
          alt="literature thumbnail"
        %}
      {% endif %}
      <div class="card-body">
        <h2 class="card-title">{{ literature.title }}</h2>
        <p class="card-text">{{ literature.description }}</p>
        <div class="row ml-1 mr-1 p-0">
          {% if literature.github %}
            <div class="github-icon">
              <div class="icon" data-toggle="tooltip" title="Code Repository">
                <a href="{{ literature.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
              </div>
              {% if literature.github_stars %}
                <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                  <i class="fa-solid fa-star"></i>
                  <span id="{{ literature.github_stars }}-stars"></span>
                </span>
              {% endif %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </a>
</div>
